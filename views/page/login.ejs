<!DOCTYPE HTML>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css"/>
    <script type="text/javascript" src="/jquery"></script>

    <!-- LINK CSS RESOURCES -->
    <link rel="stylesheet" href="/stylesheets/page/login.css">

    <!-- LINK JAVASCRIPT RESOURCES -->

</head>
<body>
    <form class="justify-content-center" method="post" action="/login">
        <div class="container">
            <!-- CONTENT -->
            <div class="form-group">
                <label class="">Tài khoản</label>
                <input class="form-control-plaintext" type="text" placeholder="Nhập tên đăng nhập" required>

                <label class="">Mật khẩu:</label>
                <input class="form-control-plaintext" type="password" placeholder="Nhập mật khẩu" required>
            </div>
            <!-- SUBMIT -->
            <input class="btn btn-success" type="submit" value="Đăng nhập"><br>
            <!-- FOOTER -->
            <input class="btn" type="button" value="Đăng nhập với Facebook" name="facebook">
            <input class="btn" type="button" value="Đăng nhập với Google" name="google">
        </div>
    </form>
</body>
</html>